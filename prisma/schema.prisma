generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// Modelo para usuarios
model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique @db.VarChar(50)
  password    String   @db.VarChar(255)
  email       String?  @unique @db.VarChar(100)
  firstName   String?  @db.VarChar(50)
  lastName    String?  @db.VarChar(50)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

// Modelo para categorías de webinars
model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique @db.VarChar(100)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relación con webinars
  webinars    Webinar[]

  @@map("categories")
}

// Modelo para webinars
model Webinar {
  id           Int      @id @default(autoincrement())
  title        String   @db.VarChar(200)
  description  String   @db.Text
  thumbnailUrl String?  @db.VarChar(500)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relación con categoría
  categoryId   Int
  category     Category @relation(fields: [categoryId], references: [id])

  // Relación con videos
  videos       Video[]

  @@map("webinars")
}

// Modelo para videos
model Video {
  id           Int      @id @default(autoincrement())
  title        String   @db.VarChar(200)
  description  String?  @db.Text
  videoUrl     String   @db.VarChar(500)
  thumbnailUrl String?  @db.VarChar(500)
  duration     Int?     // Duración en segundos
  order        Int      @default(1) // Orden del video dentro del webinar
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relación con webinar
  webinarId    Int
  webinar      Webinar  @relation(fields: [webinarId], references: [id])

  @@map("videos")
}
